{
  "name": "poc",
  "version": "1.0.0",
  "author": "Oiram Aran",
  "license": "ISC",
  "private": "true",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean:folders": "find . \\( -name 'node_modules' -o -name 'dist' -o -path './.husky/_' \\) -exec rm -rf {} +",
    "clean:lock-files": "find . \\( -name 'yarn.lock' -o -name 'package-lock.json' \\) -exec rm -f {} +",
    "files:to:lf": "find . -name 'node_modules' -prune -o -type f -exec dos2unix {} +",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.0.7"
  }
}
